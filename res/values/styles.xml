<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:font="http://schemas.android.com/apk/res/com.mitv">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ChannelPage" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionDropDownStyle" tools:ignore="NewApi">@style/ActionBarDropDown</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up_indicator</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/WhiteActionBar</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:icon">@drawable/ic_nav_bar</item>

        <!-- Support library compatibility -->
        <item name="icon">@drawable/ic_nav_bar_drawable</item>
        <item name="homeAsUpIndicator">@drawable/ic_up_indicator</item>
        <item name="actionBarStyle">@style/WhiteActionBar</item>
        <item name="actionDropDownStyle">@style/ActionBarDropDown</item>
    </style>

    <style name="Tabs" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fonttextview">roboto_mitv_regular.ttf</item>
    </style>

    <style name="TabsIcon" parent="@style/Tabs">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TabsText" parent="@style/Tabs">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomePage" parent="@style/Theme.AppCompat.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:actionDropDownStyle" tools:ignore="NewApi">@style/ActionBarDropDown</item>
        <item name="android:icon">@drawable/ic_nav_bar</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/WhiteActionBar</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:icon">@drawable/ic_nav_bar</item>

        <!-- Support library compatibility -->
        <item name="icon">@drawable/ic_nav_bar_drawable</item>
        <item name="actionBarStyle">@style/WhiteActionBar</item>
        <item name="actionDropDownStyle">@style/ActionBarDropDown</item>
    </style>

    <style name="ActionBarDropDown" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:popupBackground">@color/grey1</item>
        <item name="android:dropDownSelector">@color/grey1</item>
        <item name="android:actionBarSize" tools:ignore="NewApi">45dp</item>
        <item name="actionBarSize">45dp</item>
        <item name="android:background">@drawable/actionbar_spinner_arrow_selector</item>
        <item name="background">@drawable/actionbar_spinner_arrow_selector</item>
    </style>

    <!-- ACTIONBAR WITH BOLD WHITE TITLE -->

    <style name="WhiteTitleActionBarNoUp" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/WhiteActionBar</item>
        <item name="android:icon">@drawable/ic_nav_bar_drawable</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:src">@drawable/ic_nav_bar_drawable</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Support library compatibility -->
        <item name="icon">@drawable/ic_nav_bar_drawable</item>
        <item name="actionBarStyle">@style/WhiteActionBar</item>
    </style>

    <style name="WhiteTitleActionBar" parent="@style/WhiteTitleActionBarNoUp">
        <item name="android:homeAsUpIndicator" tools:ignore="NewApi">@drawable/ic_up_indicator</item>
        <!-- Support library compatibility -->
        <item name="homeAsUpIndicator">@drawable/ic_up_indicator</item>
    </style>

    <style name="WhiteActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/WhiteActionBarTitleText</item>
        <item name="android:background">@color/blue1</item>
        <item name="android:icon">@drawable/ic_nav_bar_drawable</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/WhiteActionBarTitleText</item>
    </style>

    <style name="WhiteActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/action_bar_header_font_size</item>
    </style>

    <!-- ViewPager Tabs -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">@dimen/header_3</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/custom_tab_indicator_text_color</item>
    </style>

    <!-- Notification Dialog -->
    <style name="remove_notification_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Notification Dialog -->
    <style name="no_connection_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="remove_notification_dialog_title" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <!-- FONT STYLES -->

    <style name="headercard1">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="fonttextview">roboto_mitv_light.ttf</item>
    </style>

    <style name="headercard2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="fonttextview">roboto_mitv_light.ttf</item>
    </style>

    <style name="header1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="fonttextview">roboto_mitv_bold.ttf</item>
    </style>

    <style name="header2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="fonttextview">roboto_mitv_bold.ttf</item>
    </style>

    <style name="header3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="fonttextview">roboto_mitv_bold.ttf</item>
    </style>

    <style name="text1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="fonttextview">roboto_mitv_regular.ttf</item>
    </style>
    
    <style name="text2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey4</item>
        <item name="fonttextview">roboto_mitv_medium.ttf</item>
    </style>

    <style name="meta1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="fonttextview">roboto_mitv_regular.ttf</item>
    </style>

    <style name="meta2">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="fonttextview">roboto_mitv_regular.ttf</item>
    </style>
    
    <style name="loading">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="fonttextview">roboto_mitv_regular.ttf</item>
    </style>

    <style name="remaining">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fonttextview">roboto_mitv_regular.ttf</item>
    </style>

    <style name="whitetextbutton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fonttextview">roboto_mitv_bold.ttf</item>
        <item name="fontbutton">roboto_mitv_bold.ttf</item>
    </style>

    <style name="bluetextbutton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="fonttextview">roboto_mitv_bold.ttf</item>
        <item name="fontbutton">roboto_mitv_bold.ttf</item>
    </style>

    <style name="error">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fonttextview">roboto_mitv_regular.ttf</item>
    </style>

    <style name="edittext">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey5</item>
        <item name="fontedittext">roboto_mitv_regular.ttf</item>
    </style>

</resources>