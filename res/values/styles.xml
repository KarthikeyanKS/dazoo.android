<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
   

    
    <style name="ChannelPage"  parent="@style/Theme.AppCompat.Light">
        <item name="android:actionDropDownStyle">@style/ActionBarDropDown</item>
    </style>
    <style name="StyledIndicators" parent="@style/Theme.AppCompat.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBarSpinnerHeaderStyle" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <!-- item name="android:background">@drawable/custom_drop_down_list_indicator</item -->
    </style>

    <style name="ActionBarDropDown" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:popupBackground">@color/grey1</item>
        <item name="android:dropDownSelector">@color/grey1</item>
    </style>

    <!-- ViewPager Tabs -->
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">

        <!-- item name="android:background">@drawable/custom_tab_indicator</item -->
        <item name="android:background">@color/black</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_3</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">@color/grey2</item>
        <item name="android:background">@color/grey2</item>
        <item name="fadeLength">1000</item>
        <item name="fadeDelay">1000</item>
    </style>

    <!-- Clock text views -->
    <style name="ClockTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey3</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">@dimen/clock_scroll_area</item>
        <item name="android:layout_marginLeft">@dimen/clock_side_margin</item>
        <item name="android:layout_marginRight">@dimen/clock_side_margin</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:onClick">onClockTextClick</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Homepage Tabs -->
    <style name="homepage_tab_selector" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <!-- Notification Dialog -->
    <style name="remove_notification_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="remove_notification_dialog_title" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

</resources>