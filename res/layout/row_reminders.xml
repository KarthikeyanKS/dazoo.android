<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_item_selector" >

    <LinearLayout
        android:id="@+id/row_reminders_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/row_reminders_header_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_reminders_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_reminders_header_container"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/row_reminders_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_reminders_text_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:textColor="@color/tvguide_program_line_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_reminders_text_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/row_reminders_text_title_tv"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:textColor="@color/tvguide_program_line_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_reminders_text_details_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <com.millicom.secondscreen.customviews.FontTextView
                    android:id="@+id/row_reminders_text_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/tvguide_program_line_color"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/row_reminders_notification_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_weight="0.2" />
    </LinearLayout>

</RelativeLayout>