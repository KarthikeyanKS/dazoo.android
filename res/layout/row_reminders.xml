<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_item_selector" >

    <!-- HEADER -->
    
    <LinearLayout
        android:id="@+id/row_reminders_header_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/row_reminders_header_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey1"
            android:padding="10dp"
            android:textColor="@color/grey2"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
    
    <!-- REMINDERS CONTAINER -->
    
    <LinearLayout
        android:id="@+id/row_reminders_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_reminders_header_container"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RelativeLayout
            android:id="@+id/row_reminders_text_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="@dimen/view_margin"
            android:orientation="vertical" >

            <!-- TITLE -->
            
            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_reminders_text_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/header_2"
                android:textStyle="bold" />

			<!-- TIME AND DATE -->
			
            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_reminders_text_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/row_reminders_text_title_tv"
                android:textColor="@color/grey3"
                android:textSize="@dimen/ingress" />
            
           <!-- CHANNEL -->
           
           <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_reminders_text_channel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_reminders_text_time_tv"
                android:layout_marginBottom="10dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/ingress" />
            
            <!-- DETAILS - SEASON - EPISODE -->
            
            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_reminders_text_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/row_reminders_text_channel_tv"
                android:layout_gravity="left"
                android:textColor="@color/grey2"
                android:textSize="@dimen/ingress"
                android:visibility="gone" />
            
        </RelativeLayout>
		
        <!-- BUTTON CONTAINER -->
        
        <RelativeLayout
            android:id="@+id/row_reminders_button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="7"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/row_reminders_notification_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="7dp"
                android:src="@drawable/ic_reminder_selected" />
            
            <View 
	            android:layout_width="1dp"
	            android:layout_height="60dp"
	            android:layout_margin="10dp"
	            android:background="@color/grey1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/row_reminders_notification_iv" />
            
        </RelativeLayout>
        
    </LinearLayout>

    <View
        android:id="@+id/row_reminders_header_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey1" 
        android:layout_below="@id/row_reminders_container"  />
    
</RelativeLayout>