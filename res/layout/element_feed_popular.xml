<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/block_popular_header_tv"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.35"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/block_feed_popular_listitem_iv"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/block_feed_popular_listitem_iv_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block_popular_feed_details_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/block_popular_feed_details_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_popular_feed_details_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/block_popular_feed_details_icon"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/header_3"
            android:textStyle="bold"
            android:lines="1" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_popular_feed_details_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_popular_feed_details_title_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/ingress" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_popular_feed_details_channel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_popular_feed_details_time_tv"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/ingress" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_popular_feed_details_extra_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_popular_feed_details_channel_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey2"
            android:textSize = "@dimen/ingress"
            android:gravity="left" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_popular_feed_timeleft_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_popular_feed_details_extra_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:textSize="@dimen/ingress"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/block_popular_feed_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_popular_feed_timeleft_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:progressDrawable="@drawable/progress_horizontal"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>