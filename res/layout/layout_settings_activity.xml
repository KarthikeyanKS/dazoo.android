<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:id="@+id/settings_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- ABOUT TEXTVIEW -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        android:background="@color/grey1"
        android:fillViewport="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey1"
            android:paddingBottom="10dp" >

            <com.mitv.customviews.FontTextView
                android:id="@+id/settings_about_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:text="@string/about_title"
                android:textColor="@color/grey2"
                android:textSize="20sp" />

            <!-- MENU CONTAINER -->

            <RelativeLayout
                android:id="@+id/settings_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_about_textview"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/layout_rounded_corners_white"
                android:padding="2dp" >

                <com.mitv.customviews.FontButton
                    android:id="@+id/settings_contact_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:gravity="left|center_vertical"
                    android:padding="3dp"
                    android:text="@string/settings_contact" />

                <com.mitv.customviews.FontButton
                    android:id="@+id/settings_terms_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/settings_contact_button"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:gravity="left|center_vertical"
                    android:padding="3dp"
                    android:text="@string/settings_terms" />
"

                <com.mitv.customviews.FontButton
                    android:id="@+id/settings_help_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/settings_terms_button"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:gravity="left|center_vertical"
                    android:padding="3dp"
                    android:text="@string/settings_help" />
            </RelativeLayout>

            <!-- VERSION TEXTVIEW -->

            <com.mitv.customviews.FontTextView
                android:id="@+id/settings_version_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_menu_container"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:textColor="@color/grey2"
                android:textSize="16sp" />

            <!-- LOGOUT BUTTON -->

            <com.mitv.customviews.FontButton
                android:id="@+id/settings_logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_version_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/layout_rounded_corners_blue1"
                android:padding="10dp"
                android:text="@string/logout_from_mitv"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        layout="@layout/layout_request_callbacks_holder_layout" />

    <include
        android:id="@+id/tab_selector_container"
        android:layout_alignParentBottom="true"
        layout="@layout/block_bottom_tabs" />

</RelativeLayout>