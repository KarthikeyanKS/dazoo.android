<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/block_feed_liked_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- CONTENT LABEL -->

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/block_feed_liked_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        font:fonttextview="fontello.ttf" />

    <!-- PRODUCT IMAGE -->

    <FrameLayout
        android:id="@+id/block_feed_liked_content_image_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_liked_header_tv" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >

            <ImageView
                android:id="@+id/block_feed_liked_content_iv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/block_feed_liked_content_iv_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

    <!-- CONTENT DETAILS -->

    <RelativeLayout
        android:id="@+id/block_feed_liked_content_details_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_liked_content_image_frame"
        android:orientation="horizontal" >

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/header_2"
            android:textStyle="bold" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_title_tv"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:lineSpacingExtra="-2sp"
            android:textColor="@color/black"
            android:textSize="@dimen/header_3"
            font:fonttextview="fontello.ttf" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_channel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_time_tv"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/header_3"
            font:fonttextview="fontello.ttf" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_channel_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:textColor="@color/grey2"
            android:textSize="@dimen/ingress"
            font:fonttextview="fontello.ttf" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_timeleft_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_details_tv"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:visibility="gone"
            font:fonttextview="fontello.ttf" />

        <ProgressBar
            android:id="@+id/block_feed_liked_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_timeleft_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/progress_horizontal"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- ACTION BUTTONS -->

    <View
        android:id="@+id/block_feed_liked_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_feed_liked_content_details_container"
        android:background="@color/grey1" />

    <LinearLayout
        android:id="@+id/block_feed_liked_buttons_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_liked_divider"
        android:orientation="horizontal" >

        <!-- LIKE BUTTON -->

        <RelativeLayout
            android:id="@+id/block_feed_liked_like_button_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/background_color_selector"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/block_feed_liked_like_button_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- DIVIDER -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@color/grey1" />
        </RelativeLayout>
        <!-- SHARE BUTTON -->

        <RelativeLayout
            android:id="@+id/block_feed_liked_share_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/background_color_selector"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/block_feed_liked_share_button_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_share_default" />
        </RelativeLayout>

        <!-- DIVIDER -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@color/grey1" />
        </RelativeLayout>
        <!-- REMIND BUTTON -->

        <RelativeLayout
            android:id="@+id/block_feed_liked_remind_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/background_color_selector"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/block_feed_liked_remind_button_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>