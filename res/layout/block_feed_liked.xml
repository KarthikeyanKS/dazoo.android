<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/block_feed_liked_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp" >

    <!-- CONTENT LABEL -->

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/block_feed_liked_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:textSize="20sp" />

    <!-- PRODUCT IMAGE -->

    <FrameLayout
        android:id="@+id/block_feed_liked_content_image_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_liked_header_tv" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/block_feed_liked_content_iv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/block_feed_liked_content_iv_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

    <!-- CONTENT DETAILS -->

    <RelativeLayout
        android:id="@+id/block_feed_liked_content_details_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_liked_content_image_frame"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/block_feed_liked_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/block_feed_liked_icon"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_title_tv"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_channel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_time_tv"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_channel_tv"
            android:layout_margin="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_feed_liked_timeleft_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_details_tv"
            android:textColor="@color/red"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/block_feed_liked_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_liked_timeleft_tv"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="25dp"
            android:progressDrawable="@drawable/progress_horizontal"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- ACTION BUTTONS -->

    <View
        android:id="@+id/block_feed_liked_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_feed_liked_content_details_container"
        android:layout_margin="10dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/block_feed_liked_buttons_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_liked_divider"
        android:background="@color/white"
        android:orientation="horizontal" >

        <!-- LIKE BUTTON -->

        <LinearLayout
            android:id="@+id/block_feed_liked_like_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/block_feed_liked_like_button_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_heart" />
        </LinearLayout>

        <!-- SEPARATOR -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_separator" />
        </LinearLayout>

        <!-- SHARE BUTTON -->

        <LinearLayout
            android:id="@+id/block_feed_liked_share_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/block_feed_liked_share_button_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/share_icon" />
        </LinearLayout>

      <!-- SEPARATOR -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_separator" />
        </LinearLayout>

        <!-- REMIND BUTTON -->

        <LinearLayout
            android:id="@+id/block_feed_liked_remind_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/block_feed_liked_remind_button_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_clock" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>