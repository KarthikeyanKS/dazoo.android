<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/liked_content_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/block_liked_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- CONTENT LABEL -->

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_liked_content_class_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@color/lightblue"
            android:textSize="14sp" />

        <!-- PRODUCT IMAGE -->

        <FrameLayout
            android:id="@+id/block_liked_content_image_frame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_liked_content_class_tv"
            android:layout_margin="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/block_liked_content_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/block_liked_content_iv_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/block_liked_content_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </FrameLayout>

        <!-- CONTENT DETAILS -->

        <RelativeLayout
            android:id="@+id/block_liked_content_details_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/block_liked_content_details_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:visibility="gone" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/block_liked_content_details_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/block_liked_content_details_icon"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/block_liked_content_details_episode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="right" />
        </RelativeLayout>

        <!-- ACTION BUTTONS -->

        <RelativeLayout
            android:id="@+id/block_liked_buttons_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- LIKE BUTTON -->

            <RelativeLayout
                android:id="@+id/block_liked_like_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/light_gray"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/block_liked_like_button_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>
            
            <!-- SHARE BUTTON -->
            <RelativeLayout
                android:id="@+id/block_liked_share_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/block_liked_like_button_container"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/light_gray"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/block_liked_share_button_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>
            
            <!-- REMIND BUTTON -->
            <RelativeLayout
                android:id="@+id/block_liked_remind_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/light_gray"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/block_liked_remind_button_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>
            
            
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>