<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_failed_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/request_failed_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_error_state_mitv" />

    <TextView
        android:id="@+id/request_failed_details_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_failed_iv"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/general_error_message_message"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/request_failed_reload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_failed_details_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:minWidth="250dp"
        android:text="@string/general_error_message_button"
        android:textColor="@color/black" />

</RelativeLayout>