<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.seconscreen.customviews"
    android:id="@+id/resetpassword_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/resetpassword_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/forgot_your_password"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/resetpassword_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetpassword_title_tv"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/reset_password_text"
        android:textSize="18sp"
        android:gravity="center" />

    <com.millicom.secondscreen.customviews.FontEditText
        android:id="@+id/resetpassword_email_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetpassword_text_tv"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:hint="@string/hint_enter_email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColorHint="@color/grey1"
        android:textSize="16sp"
        android:background="@drawable/edittext_standard" />

    <com.millicom.secondscreen.customviews.FontButton
        android:id="@+id/resetpassword_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetpassword_email_edittext"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:background="@drawable/layout_rounded_corners_blue" />

</RelativeLayout>