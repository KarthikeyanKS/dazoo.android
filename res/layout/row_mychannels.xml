<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/row_mychannels_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_selector"
    android:orientation="horizontal" 
    android:visibility="visible">

    <ImageView
        android:id="@+id/row_mychannels_channel_iv"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_margin="5dp" 
        android:layout_alignParentLeft="true"/>

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/row_mychannels_channel_text_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/row_mychannels_channel_iv"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:textSize="14sp"
        android:textStyle="bold" 
        font:fonttextview="Roboto-MiTV-Medium.ttf" />

    <CheckBox
        android:id="@+id/row_mychannels_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp" />

</RelativeLayout>