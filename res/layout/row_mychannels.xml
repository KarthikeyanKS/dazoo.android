<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_mychannels_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/row_mychannels_channel_iv"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

    <com.mitv.ui.elements.FontTextView
        android:id="@+id/row_mychannels_channel_text_title_tv"
        style="@style/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/row_mychannels_channel_iv"
        android:gravity="left" />

    <CheckBox
        android:id="@+id/row_mychannels_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:button="@drawable/apptheme_btn_check_holo_light" />

</RelativeLayout>