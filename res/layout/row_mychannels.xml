<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_mychannels_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/row_mychannels_channel_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_mychannels_channel_button_tv"
            style="@style/whitetextbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/row_mychannels_channel_iv"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

    <com.mitv.ui.elements.FontTextView
        android:id="@+id/row_mychannels_channel_text_title_tv"
        style="@style/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/row_mychannels_channel_button"
        android:layout_toRightOf="@id/row_mychannels_channel_iv"
        android:gravity="left" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/row_mychannels_channel_button"
        android:layout_margin="10dp"
        android:background="@color/grey1" />

</RelativeLayout>