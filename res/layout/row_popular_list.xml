<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/row_popular_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/row_popular_header_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/grey1" 
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:visibility="gone">

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/row_popular_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:textStyle="bold" 
            font:fonttextview="fontello.ttf" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/row_popular_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_below="@id/row_popular_header_container">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.35"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/row_popular_listitem_iv"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/row_popular_listitem_iv_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_popular_details_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:orientation="vertical"
            android:layout_gravity="center_vertical" >

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_popular_details_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_popular_details_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_popular_details_title_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_popular_details_channel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_popular_details_time_tv"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_popular_details_extra_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_popular_details_channel_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_popular_timeleft_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_popular_details_extra_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/row_popular_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_popular_timeleft_tv"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="10dp"
                android:progressDrawable="@drawable/progress_horizontal"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <!-- View
        android:id="@+id/row_popular_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/row_popular_container"
        android:layout_margin="20dp"
        android:background="@color/grey1" /-->

</RelativeLayout>