<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/bad_request_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/bad_request_iv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_error_state_dazoo" />

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/bad_request_details_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bad_request_iv"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/general_error_message_message"
        android:textColor="@color/black"
        android:textSize="14sp"
        font:fonttextview="fontello.ttf" />

    <com.millicom.secondscreen.customviews.FontButton
        android:id="@+id/bad_request_reload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bad_request_details_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:minWidth="250dp"
        android:text="@string/general_error_message_button"
        android:textColor="@color/black" />

</RelativeLayout>