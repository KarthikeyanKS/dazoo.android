<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_item_selector" >

    <LinearLayout
        android:id="@+id/row_block_recommended_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/row_block_recommended_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/row_block_recommended_iv"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/row_block_recommended_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_block_recommended_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_block_recommended_text_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:textColor="@color/grey3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/row_block_recommended_icon_channel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/row_block_recommended_text_title_tv"
                android:visibility="gone" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_block_recommended_text_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_block_recommended_text_title_tv"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/row_block_recommended_icon_channel_iv"
                android:textColor="@color/grey3"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_block_recommended_button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:background="@color/grey1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/row_block_recommended_button_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>