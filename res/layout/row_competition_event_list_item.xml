<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <!-- HEADER BY GROUP -->
    
    <RelativeLayout
        android:id="@+id/row_competition_group_header_container_event"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:paddingTop="15dp"
        android:paddingBottom="5dp"
	    android:background="@color/grey1" >
	    
        <!-- GROUP -->
    
	    <com.mitv.ui.elements.FontTextView
	        android:id="@+id/row_competition_header_group_event"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:textAllCaps="true"
	        android:textColor="@color/grey3"
	        android:textSize="20sp" />
    </RelativeLayout>
    
    <!-- HEADER DAY -->
    
    <com.mitv.ui.elements.FontTextView
        android:id="@+id/row_competition_start_day_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_competition_group_header_container_event"
        android:background="@color/grey1"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textAllCaps="true"
        android:textColor="@color/grey3"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/row_competition_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_competition_start_day_of_week"
        android:layout_marginTop="5dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/row_competition_page_begin_time_broadcast_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="5dp" >

            <!-- Start time of game -->

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_page_begin_time_broadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible" />

            <!-- Channels airing on channels: -->

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_airing_channels_for_broadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row_competition_page_begin_time_broadcast"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey1"
                android:textSize="10sp"
                android:visibility="visible" />
        </RelativeLayout>

        <!-- TEAM ONE -->

        <RelativeLayout
            android:id="@+id/row_competition_page_team_one_flag_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:padding="5dp" >

            <!-- Flag team one -->

            <ImageView
                android:id="@+id/row_competition_team_one_flag"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/competitions_contry_flag_default"
                android:visibility="visible" />

            <!-- Team one name -->

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_team_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/row_competition_team_one_flag"
                android:textSize="12sp"
                android:visibility="visible" />
        </RelativeLayout>

        <!-- TEAM TWO -->

        <RelativeLayout
            android:id="@+id/row_competition_page_team_two_flag_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="5dp" >

            <!-- Team two name -->

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_team_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:visibility="visible" />

            <!-- Flag team two -->

            <ImageView
                android:id="@+id/row_competition_team_two_flag"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/row_competition_team_two_name"
                android:src="@drawable/competitions_contry_flag_default"
                android:visibility="visible" />
        </RelativeLayout>
        
    </RelativeLayout>
    
    <!-- Divider -->
    
    <View
        android:id="@+id/row_competition_row_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/row_competition_start_day_of_week"
        android:visibility="gone"
        android:background="@color/grey1" />

</RelativeLayout>