<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- HEADER SQUAD -->

    <RelativeLayout
        android:id="@+id/row_competition_group_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp" >

        <!-- Shirt number -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_header_shirt_number"
            style="@style/header1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

        <!-- Player name -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_header_player"
            style="@style/header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/row_squad_header_shirt_number" />

        <!-- Red flag -->

        <ImageView
            android:id="@+id/row_squad_red_flag_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/competitions_contry_flag_default" />

        <!-- Yellow flag -->

        <ImageView
            android:id="@+id/row_squad_yellow_flag_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/row_squad_red_flag_icon"
            android:src="@drawable/competitions_contry_flag_default" />

        <!-- Football -->

        <ImageView
            android:id="@+id/row_squad_football_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/row_squad_yellow_flag_icon"
            android:src="@drawable/competitions_contry_flag_default" />

        <!-- PJ -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_header_pj"
            style="@style/header1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/row_squad_football_icon" />
    </RelativeLayout>

    <!-- DIVIDER -->

    <View
        android:id="@+id/row_squad_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/row_competition_group_header_container"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <!-- ROW START HERE -->

    <RelativeLayout
        android:id="@+id/row_squad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_squad_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp" >

        <!-- Shirt number -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_row_shirt_number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="15sp" />

        <!-- Player name -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_row_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/row_squad_row_shirt_number"
            android:textSize="15sp" />

        <!-- red cards -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_row_red_cards"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textSize="15sp" />

        <!-- Yellow cards -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_row_yellow_cards"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/row_squad_row_red_cards"
            android:textAlignment="center"
            android:textSize="15sp" />

        <!-- Goals -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_row_goals"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/row_squad_row_yellow_cards"
            android:textAlignment="center"
            android:textSize="15sp" />
        
        <!-- PJ -->

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_squad_row_pj"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/row_squad_row_goals"
            android:textAlignment="center"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>