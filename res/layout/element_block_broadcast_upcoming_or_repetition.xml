<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/block_broadcast_upcoming_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_color_selector"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:visibility="gone" >

    <RelativeLayout
        android:id="@+id/block_tripple_broadcast_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/block_tripple_broadcast_season_episode"
            style="@style/header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:visibility="gone" />

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/block_tripple_broadcast_title_time"
            style="@style/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_tripple_broadcast_season_episode"
            android:gravity="left"
            android:lineSpacingExtra="0sp" />

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/block_tripple_broadcast_channel"
            style="@style/meta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_tripple_broadcast_title_time"
            android:gravity="left" />
    </RelativeLayout>

    <!--View
        android:id="@+id/block_tripple_broadcast_view_next_to_reminder_view"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/grey1" /-->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="-20dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:padding="5dp" >

        <!-- REMIND BUTTON -->

        <com.mitv.ui.elements.ReminderView
            android:id="@+id/block_tripple_broadcast_reminder_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:padding="0dp" />
    </RelativeLayout>

</LinearLayout>