<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.mitv.ui.elements.FontTextView
        android:id="@+id/block_broadcast_airing_now_title_textview"
        style="@style/headercard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" />

    <!-- FIRST BROADCAST AIRING NOW  -->
    <include
        android:id="@+id/block_broadcast_airing_now_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_broadcast_airing_now_title_textview"
        layout="@layout/element_poster_broadcast_also_airing_now" />

    <View
        android:id="@+id/block_broadcast_airing_now_one_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_broadcast_airing_now_one"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey1"
        android:visibility="gone" />

    
    <!-- SECOND BROADCAST AIRING NOW  -->
    <include
        android:id="@+id/block_broadcast_airing_now_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_broadcast_airing_now_one_bottom_divider"
        layout="@layout/element_poster_broadcast_also_airing_now" />

    <View
        android:id="@+id/block_broadcast_airing_now_two_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_broadcast_airing_now_two"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey1"
        android:visibility="gone" />
    

    <!-- THIRD BROADCAST AIRING NOW -->
    <include
        android:id="@+id/block_broadcast_airing_now_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_broadcast_airing_now_two_bottom_divider"
        layout="@layout/element_poster_broadcast_also_airing_now" />

    <View
        android:id="@+id/block_broadcast_airing_now_three_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_broadcast_airing_now_three"
        android:background="@color/grey1"
        android:visibility="gone" />

    <!-- MORE ELEMENTS -->
    <com.mitv.ui.elements.FontTextView
        android:id="@+id/block_broadcast_airing_now_show_more_textview"
        style="@style/meta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_broadcast_airing_now_three_bottom_divider"
        android:layout_centerVertical="true"
        android:background="@drawable/background_color_selector"
        android:gravity="left"
        android:padding="15dp"
        android:text="@string/upcoming_episodes_more"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_broadcast_airing_now_show_more_textview"
        android:background="@color/grey2" />

</RelativeLayout>