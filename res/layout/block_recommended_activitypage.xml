<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/recommended_content_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <!-- Contains a layout that will show when a singe product fails due to connection -->

    <include layout="@layout/layout_content_failed" />

    <!-- Contains a layout that will show when a single product request fails due to the product is no longer in the api -->

    <include layout="@layout/layout_content_expired" />

    <!-- Request callback states -->

    <include layout="@layout/layout_request_callbacks_holder_layout" />

</RelativeLayout>