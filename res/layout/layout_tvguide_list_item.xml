<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    android:id="@+id/item_container">

    <LinearLayout
        android:id="@+id/tvguide_list_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/tvguide_channel_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/tvguide_channel_iv"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/tvguide_channel_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <!-- LIVE NOW -->

            <RelativeLayout
                android:id="@+id/tvguide_program_line_live_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvguide_program_line_live_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textColor="@color/tvguide_program_line_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/tvguide_program_line_live_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/tvguide_program_line_live_time_tv"
                    android:contentDescription="@string/tv_guide_rating_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvguide_program_line_live_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/tvguide_program_line_live_icon_iv"
                    android:textColor="@color/tvguide_program_line_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- NEXT 1 -->

            <RelativeLayout
                android:id="@+id/tvguide_program_line_next_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvguide_program_line_live_container" >

                <TextView
                    android:id="@+id/tvguide_program_line_next_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textColor="@color/tvguide_program_line_color"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/tvguide_program_line_next_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/tvguide_program_line_next_time_tv"
                    android:contentDescription="@string/tv_guide_rating_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvguide_program_line_next_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/tvguide_program_line_next_icon_iv"
                    android:textColor="@color/tvguide_program_line_color"
                    android:textSize="14sp"
                    android:textStyle="" />
            </RelativeLayout>

            <!-- LAST -->

            <RelativeLayout
                android:id="@+id/tvguide_program_line_last_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvguide_program_line_next_container" >

                <TextView
                    android:id="@+id/tvguide_program_line_last_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:textColor="@color/tvguide_program_line_color"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/tvguide_program_line_last_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/tvguide_program_line_last_time_tv"
                    android:contentDescription="@string/tv_guide_rating_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvguide_program_line_last_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/tvguide_program_line_last_icon_iv"
                    android:textColor="@color/tvguide_program_line_color"
                    android:textSize="14sp"
                    android:textStyle="" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        />

</RelativeLayout>