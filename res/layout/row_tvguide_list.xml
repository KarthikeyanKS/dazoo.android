<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_selector" >

    <LinearLayout
        android:id="@+id/tvguide_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tvguide_channel_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/guide_image_margin"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:focusableInTouchMode="false" />

        <com.mitv.ui.elements.FontTextView
            android:id="@+id/tvguide_program_line_live"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:ellipsize="none"
            android:lineSpacingExtra="10dp"
            android:maxLines="3"
            android:paddingTop="10dp"
            android:singleLine="false"
            android:textColor="@color/grey3"
            android:textSize="14sp"
            font:fonttextview="roboto_mitv_medium.ttf" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@id/tvguide_list_container"
        android:background="@color/grey1" />

</RelativeLayout>