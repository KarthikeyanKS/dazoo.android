<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/tab_event_indicator"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true" />

    <View
        android:id="@+id/tab_event_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tab_event_indicator"
        android:background="@color/home_divider" />

    <com.mitv.ui.elements.CustomViewPager
        android:id="@+id/tab_event_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:tag="sticky" />

</RelativeLayout>