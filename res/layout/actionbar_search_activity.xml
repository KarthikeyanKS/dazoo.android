<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionbar_background"
    android:orientation="horizontal"
    tools:context=".SearchPageActivity" >

    <RelativeLayout
        android:id="@+id/actionbar_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_icon_selector" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/custom_back_up" />
    </RelativeLayout>

    <View
        android:id="@+id/actionbar_left_separators_light"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/actionbar_back"
        android:background="#1AFFFFFF" />

    <View
        android:id="@+id/actionbar_left_separators_dark"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/actionbar_left_separators_light"
        android:background="#99000000" />
    
	<com.millicom.secondscreen.customviews.InstantAutoComplete
        android:id="@+id/searchbar_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/actionbar_left_separators_dark"
        android:layout_centerVertical="true"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:paddingRight="45dp"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/grey4"
        android:textSize="14sp" />
	    
	<RelativeLayout
		android:id="@+id/searchbar_progress"
		android:layout_width="48dp"
		android:layout_height="30dp"
		android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
		android:background="@drawable/actionbar_icon_selector"
		android:visibility="gone">
	
       <ProgressBar 
			style="?android:attr/progressBarStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"/>
   </RelativeLayout>

	<RelativeLayout
	    android:id="@+id/searchbar_clear"
	    android:layout_width="48dp"
	    android:layout_height="30dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/actionbar_icon_selector" >

	    <ImageView
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/close_button_icon" />
	</RelativeLayout>
</RelativeLayout>