<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/request_failed_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/request_failed_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_error_state_dazoo" />

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/request_failed_details_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_failed_iv"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/error_connection_lost"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.millicom.secondscreen.customviews.FontButton
        android:id="@+id/request_failed_reload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_failed_details_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:minWidth="200dp"
        android:background="@drawable/layout_rounded_corners_grey"
        android:padding="8dp"
        android:text="@string/general_error_message_button"
        android:textColor="@color/white" />

</RelativeLayout>