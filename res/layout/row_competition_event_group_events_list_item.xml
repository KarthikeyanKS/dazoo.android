<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white" >

    <!-- HEADER DAY -->
    <com.mitv.ui.elements.FontTextView
        android:id="@+id/row_competition_start_day_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey0"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textAllCaps="true"
        android:textColor="@color/grey3"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/row_competition_event_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_competition_start_day_of_week"
        android:paddingTop="5dp"
        android:background="@drawable/background_color_selector_white">

        <RelativeLayout
            android:id="@+id/row_competition_page_begin_time_broadcast_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:padding="5dp" >

            <!-- Start time of game -->

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_page_begin_time_broadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible"
                font:fonttextview="roboto_mitv_bold.ttf" />

            <!-- Score when game is finished -->
            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_page_game_past_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="gone"
                font:fonttextview="roboto_mitv_bold.ttf" />
            
        </RelativeLayout>

        
        <!-- Channels airing on channels: -->
        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_competition_airing_channels_for_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_competition_page_begin_time_broadcast_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/grey1"
            android:textSize="10sp"
            android:visibility="gone" />
        
        
        <!-- TEAM HOME -->
        <RelativeLayout
            android:id="@+id/row_competition_page_team_one_flag_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/row_competition_page_begin_time_broadcast_container"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/row_competition_team_one_flag"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/competitions_contry_flag_default"
                android:scaleType="fitXY"/>
            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_team_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/row_competition_team_one_flag"
                android:textSize="12sp"
                android:gravity="left"
                android:maxLines="2"/>
         
        </RelativeLayout>

        <!-- TEAM AWAY -->
        <RelativeLayout
            android:id="@+id/row_competition_page_team_two_flag_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:padding="5dp" >

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/row_competition_team_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:gravity="right"
                android:maxLines="2"/>
            <ImageView
                android:id="@+id/row_competition_team_two_flag"
                android:layout_width="50dp"
                android:layout_height="34dp"
                android:layout_toRightOf="@id/row_competition_team_two_name"
                android:layout_centerVertical="true"
                android:src="@drawable/competitions_contry_flag_default"
                android:scaleType="fitXY"/>
         
        </RelativeLayout>
    </RelativeLayout>

    <!-- Divider -->

    <View
        android:id="@+id/row_competition_row_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/row_competition_start_day_of_week"
        android:background="@color/grey1"
        android:visibility="gone" />

</RelativeLayout>