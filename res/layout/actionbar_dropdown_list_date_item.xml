<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp" >

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/layout_actionbar_dropdown_list_date_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft = "true"
        android:layout_marginLeft="5dp"
        android:textSize="18sp" />
    
    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/layout_actionbar_dropdown_list_date_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/layout_actionbar_dropdown_list_date_item_name"
        android:layout_alignParentRight = "true"
        android:textSize="18sp" />

</RelativeLayout>