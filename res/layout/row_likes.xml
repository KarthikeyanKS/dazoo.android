<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_item_selector" >
    
    <!-- HEADER -->
    
    <LinearLayout
        android:id="@+id/row_likes_header_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/row_likes_header_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
    
    <View
        android:id="@+id/row_likes_header_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/light_gray" 
        android:layout_below="@id/row_likes_header_container" />
    
    <!-- LIKES CONTAINER -->
    
    <LinearLayout
        android:id="@+id/row_likes_container"
        android:layout_width="fill_parent"
        android:layout_below="@id/row_likes_header_container"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/row_likes_text_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.6"
            android:orientation="vertical" >

            <!-- TITLE -->

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_likes_text_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:textColor="@color/tvguide_program_line_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- DETAILS -->
            
            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/row_likes_text_details_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/row_likes_text_title_tv"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:textColor="@color/tvguide_program_line_color"
                android:textSize="16sp"/>
            
        </RelativeLayout>
        
        <!-- BUTTON CONTAINER -->
        
        <RelativeLayout
            android:id="@+id/row_likes_button_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/row_likes_button_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp" 
                android:src="@drawable/ic_heart_red"/>
            
            <View 
	            android:layout_width="1dp"
	            android:layout_height="60dp"
	            android:layout_margin="10dp"
	            android:background="@color/light_gray"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/row_likes_button_iv" />
            
        </RelativeLayout>
        
    </LinearLayout>

</RelativeLayout>