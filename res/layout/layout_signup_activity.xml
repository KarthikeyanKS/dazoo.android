<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/signup_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true" 
        android:focusableInTouchMode="true" >

        <com.mitv.customviews.FontEditText
            android:id="@+id/signup_firstname_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:hint="@string/hint_firstname"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/grey2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_standard" />
        
		<com.mitv.customviews.FontTextView
            android:id="@+id/signup_error_firstname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@id/signup_firstname_edittext"
            android:padding="8dp"
            android:textColor="@color/red"
            android:gravity="center"
        	font:fonttextview="roboto_mitv_medium.ttf" />

        <com.mitv.customviews.FontEditText
            android:id="@+id/signup_lastname_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_error_firstname_textview"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="@string/hint_lastname"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="@color/grey2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_standard" />
        
		<com.mitv.customviews.FontTextView
            android:id="@+id/signup_error_lastname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@id/signup_lastname_edittext"
            android:padding="8dp"
            android:textColor="@color/red"
            android:gravity="center"
        	font:fonttextview="roboto_mitv_medium.ttf" />

        <com.mitv.customviews.FontEditText
            android:id="@+id/signup_email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_error_lastname_textview"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColorHint="@color/grey2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_standard" />
        
		<com.mitv.customviews.FontTextView
            android:id="@+id/signup_error_email_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@id/signup_email_edittext"
            android:padding="8dp"
            android:textColor="@color/red"
            android:gravity="center"
        	font:fonttextview="roboto_mitv_medium.ttf" />

        <com.mitv.customviews.FontEditText
            android:id="@+id/signup_password_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/signup_error_email_textview"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="@color/grey2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/edittext_standard" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/signup_error_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@id/signup_password_edittext"
            android:padding="8dp"
            android:textColor="@color/red"
            android:gravity="center" 
        	font:fonttextview="roboto_mitv_medium.ttf" />
        
        <com.mitv.customviews.FontTextView
            android:id="@+id/signup_terms_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@id/signup_error_password_textview"
            android:padding="8dp"
            android:textColor="@color/grey5"
            android:gravity="center" 
            android:textSize="16sp"
            android:text="@string/sign_up_terms_info"
        	font:fonttextview="roboto_mitv_medium.ttf" />
        
         <com.mitv.customviews.FontTextView
            android:id="@+id/signup_terms_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@id/signup_terms_info"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:linksClickable="true"
            android:textColorLink="@color/grey2"
            android:text="@string/terms_link"
        	font:fonttextview="roboto_mitv_bold.ttf" />

        <com.mitv.customviews.FontButton
            android:id="@+id/signup_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_terms_link"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/join"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/layout_rounded_corners_blue"
            android:lines="1"
            font:fonttextview="roboto_mitv_bold.ttf" />
    </RelativeLayout>

</ScrollView>