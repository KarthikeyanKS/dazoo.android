<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_loading_not_transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:visibility="gone" >

    <ProgressBar
        android:id="@+id/request_loading_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/progressbar_circle_custom_style"
        android:layout_centerInParent="true" />

    <com.mitv.ui.elements.FontTextView
        android:id="@+id/request_loading_details_tv"
        style="@style/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_loading_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"/>

</RelativeLayout>