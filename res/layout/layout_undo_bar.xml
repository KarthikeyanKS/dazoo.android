<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/undobar" 
    style="@style/UndoBar"
    android:layout_marginBottom="50dp"
    android:layout_alignParentBottom="true"
    android:visibility="gone">
    
		<TextView android:id="@+id/undobar_message" style="@style/UndoBarMessageModified" />
		
		<View
	        android:id="@+id/undobar_divider"
	        android:layout_width="1dp"
	        android:layout_height="fill_parent"
	        android:layout_marginBottom="8dp"
	        android:layout_marginTop="8dp"
	        android:background="@drawable/undobar_divider" />
		
    	<Button android:id="@+id/undobar_button" style="@style/UndoBarButtonModified"/>
</LinearLayout>