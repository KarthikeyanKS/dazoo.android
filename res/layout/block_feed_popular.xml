<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- HEADER -->

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/block_popular_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="@string/popular_now" />
    
	<!-- ITEM 1 -->
    <include
        android:id="@+id/block_popular_element_one"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        android:layout_below="@id/block_popular_header_tv"
        layout="@layout/element_feed_popular" />
    
   	<!-- DIVIDER -->
    <View
        android:id="@+id/block_feed_popular_one_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_popular_element_one"
        android:layout_margin="10dp"
        android:background="@color/grey1" />
    
    <!-- ITEM 2 -->
    <include
        android:id="@+id/block_popular_element_two"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/block_feed_popular_one_divider"
        layout="@layout/element_feed_popular" />
    
    <!-- DIVIDER -->
  	<View
        android:id="@+id/block_feed_popular_two_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_popular_element_two"
        android:layout_margin="10dp"
        android:background="@color/grey1" />
    
    <!-- ITEM 3 -->
    <include
        android:id="@+id/block_popular_element_three"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_popular_two_divider"
        layout="@layout/element_feed_popular" />

    <!-- FOOTER -->

    <View
        android:id="@+id/block_feed_popular_divider_footer"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_popular_element_three"
        android:background="@color/grey1" />

    <RelativeLayout
        android:id="@+id/block_popular_show_more_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_popular_divider_footer"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <com.millicom.secondscreen.customviews.FontTextView
            android:id="@+id/block_popular_show_more_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="@string/show_all"
            android:textSize="@dimen/header_2" />
    </RelativeLayout>

</RelativeLayout>