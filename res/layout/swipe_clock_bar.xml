<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/swipe_clock_bar_clock_icon_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="26sp"
        android:text="@string/icon_clock"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="-8dp"
        android:textColor="@color/grey4"
        font:fonttextview="Roboto_MiTV_Medium.ttf" />

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/element_timebar"
        android:fillViewport="true" />

</LinearLayout>