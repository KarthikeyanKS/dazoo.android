<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/hallon"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/upcoming_episodes_title_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <!-- FIRST UPCOMING EPISODE -->

    <RelativeLayout
        android:id="@+id/upcoming_one_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/upcoming_episodes_one_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/upcoming_episodes_one_season_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcoming_episodes_one_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcoming_episodes_one_season_episode"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/upcoming_episodes_one_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcoming_episodes_one_title_time"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/upcoming_episodes_one_addreminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <View
            android:id="@+id/upcoming_episodes_one_right_divider"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/upcoming_episodes_one_addreminder"
            android:background="@color/light_gray" />

        <View
            android:id="@+id/upcoming_episodes_one_bottom_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/upcoming_episodes_one_info_container"
            android:background="@color/light_gray" />
    </RelativeLayout>

    <!-- SECOND UPCOMING EPISODE -->

    <RelativeLayout
        android:id="@+id/upcoming_two_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcoming_two_container"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/upcoming_episodes_two_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/upcoming_episodes_two_season_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcoming_episodes_two_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcoming_episodes_two_season_episode"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/upcoming_episodes_two_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcoming_episodes_two_title_time"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/upcoming_episodes_two_addreminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <View
            android:id="@+id/upcoming_episodes_two_right_divider"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/upcoming_episodes_two_addreminder"
            android:background="@color/light_gray" />

        <View
            android:id="@+id/upcoming_episodes_two_bottom_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/upcoming_episodes_two_info_container"
            android:background="@color/light_gray" />
    </RelativeLayout>

    <!-- THIRD UPCOMING EPISODE -->

    <RelativeLayout
        android:id="@+id/upcoming_three_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcoming_three_container"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/upcoming_episodes_three_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/upcoming_episodes_three_season_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/upcoming_episodes_three_title_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcoming_episodes_three_season_episode"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/upcoming_episodes_three_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/upcoming_episodes_three_title_time"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/upcoming_episodes_three_addreminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher" />

        <View
            android:id="@+id/upcoming_episodes_three_right_divider"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/upcoming_episodes_three_addreminder"
            android:background="@color/light_gray" />
    </RelativeLayout>

    <View
        android:id="@+id/upcoming_episodes_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/upcoming_three_container"
        android:background="@color/light_gray"
        android:visibility="gone" />

    <TextView
        android:id="@+id/upcoming_episodes_more_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcoming_episodes_divider"
        android:layout_margin="20dp"
        android:text="@string/upcoming_episodes_more"
        android:textColor="@color/light_gray"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>