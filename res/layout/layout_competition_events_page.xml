<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/competition_scrollable_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey1"
    android:orientation="vertical" >

    <com.emilsjolander.components.StickyScrollViewItems.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <include
                android:id="@+id/competition_broacastpage_block_container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                layout="@layout/block_competition_broadcastpage_main_content" />

            <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/tab_event_indicator"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@id/competition_broacastpage_block_container_layout"
                android:background="@color/white"
                android:tag="sticky" />

            <View
                android:id="@+id/tab_event_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tab_event_indicator"
                android:background="@color/home_divider" />

            <com.mitv.ui.elements.CustomViewPager
                android:id="@+id/tab_event_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_event_divider" />

            <!--
                include
                android:id="@+id/competition_fragment_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/competition_broacastpage_block_container_layout"
                layout="@layout/fragment_competition_holder_layout" /
            -->

        </RelativeLayout>
    </com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>

    <!-- NAVIGATION TABS -->

    <include
        android:id="@+id/tab_selector_container"
        android:layout_alignParentBottom="true"
        layout="@layout/block_bottom_tabs" />

    <!-- ERROR, NO CONTENT, NO CONNECTION VIEWS -->

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        layout="@layout/layout_request_callbacks_holder_main_layout" />

</RelativeLayout>