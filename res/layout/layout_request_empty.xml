<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_empty_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="75dp"
    android:visibility="gone"
    android:padding="10dp" >

    <TextView
        android:id="@+id/request_empty_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/no_content_layout_title"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="16sp" />

    <com.mitv.ui.elements.FontTextView
        android:id="@+id/request_empty_details_tv"
        style="@style/meta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_empty_title_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:text="@string/no_content_layout_message" />

</RelativeLayout>