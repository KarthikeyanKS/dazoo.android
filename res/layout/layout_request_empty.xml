<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_empty_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="75dp"
    android:padding="10dp"
    android:visibility="gone" >

    <TextView
        android:id="@+id/request_empty_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/no_content_layout_title"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/request_empty_details_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_empty_title_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/no_content_layout_message"
        android:textSize="14sp" /> 
</RelativeLayout>