<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resetpasswordfinal_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/tvguide_table_side_clock_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/resetpasswordfinal_avatar_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_envelope" />

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/resetpassword_title_tv"
                style="@style/header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpasswordfinal_avatar_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/check_your_email" />

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/resetpassword_mail_text_tv"
                style="@style/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpassword_title_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/reset_password_mail_text" />

            <com.mitv.ui.elements.FontTextView
                android:id="@+id/resetpassword_mail_spam_tv"
                style="@style/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpassword_mail_text_tv"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/reset_password_mail_spam_text" />

            <!--
                 com.mitv.ui.elements.FontButton
                android:id="@+id/resetpassword_already_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpassword_mail_spam_tv"
                android:layout_margin="20dp"
                android:background="@drawable/background_color_selector"
                android:gravity="center_horizontal"
                android:text="@string/login_here"
                android:textColor="@color/blue1"
                android:textSize="@dimen/ingress"
                android:textStyle="bold"
                font:fontedittext="roboto_mitv_bold.ttf" /
            -->

            <RelativeLayout
                android:id="@+id/resetpassword_already_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpassword_mail_spam_tv"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_color_selector_login_link"
                android:orientation="horizontal" >

                <com.mitv.ui.elements.FontTextView
                    android:id="@+id/resetpassword_already_login_text"
                    style="@style/bluetextbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:text="@string/login_here" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>