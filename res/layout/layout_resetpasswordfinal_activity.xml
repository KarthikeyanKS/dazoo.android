<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:id="@+id/resetpasswordfinal_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/tvguide_table_side_clock_index"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/resetpasswordfinal_avatar_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_envelope" />

            <com.mitv.customviews.FontTextView
                android:id="@+id/resetpassword_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpasswordfinal_avatar_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/check_your_email"
                android:textSize="@dimen/header_1"
                android:textStyle="bold"
                font:fonttextview="roboto_mitv_bold.ttf" />

            <com.mitv.customviews.FontTextView
                android:id="@+id/resetpassword_mail_text_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpassword_title_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/reset_password_mail_text"
                android:textSize="@dimen/header_3"
        		font:fonttextview="roboto_mitv_medium.ttf" />

            <com.mitv.customviews.FontTextView
                android:id="@+id/resetpassword_mail_spam_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resetpassword_mail_text_tv"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/reset_password_mail_spam_text"
                android:textSize="@dimen/header_3"
                font:fonttextview="roboto_mitv_medium.ttf" />

            <!-- ALREADY GOT A NEW PASSWORD -->

            <RelativeLayout
                android:id="@+id/resetpassword_already_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <com.mitv.customviews.FontTextView
                    android:id="@+id/resetpassword_already_text_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/already_registered"
                    android:textColor="@color/grey2"
                    android:textSize="@dimen/header_3"
                    android:textStyle="bold" 
        			font:fonttextview="roboto_mitv_bold.ttf"/>

                <com.mitv.customviews.FontButton
                    android:id="@+id/resetpassword_already_login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/resetpassword_already_text_tv"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:text="@string/login_here"
                    android:textColor="@color/blue1"
                    android:textSize="@dimen/ingress"
                    android:textStyle="bold"
                    font:fonttextview="roboto_mitv_bold.ttf" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>