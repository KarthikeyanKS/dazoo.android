<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.seconscreen.customviews"
    android:id="@+id/resetpasswordfinal_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/resetpasswordfinal_avatar_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_envelope" 
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/resetpassword_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/resetpasswordfinal_avatar_iv"
        android:layout_margin="10dp"
        android:text="@string/check_your_email"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/resetpassword_mail_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@id/resetpassword_title_tv"
        android:text="@string/reset_password_mail_text"
        android:textSize="18sp" />

    <com.millicom.secondscreen.customviews.FontTextView
        android:id="@+id/resetpassword_mail_spam_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetpassword_mail_text_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="@string/reset_password_mail_spam_text"
        android:textSize="18sp" />

</RelativeLayout>