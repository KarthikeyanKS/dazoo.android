<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    
    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/row_competition_event_group_header_container"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp">
	    
        <!-- Team -->
        <com.mitv.ui.elements.FontTextView
	        android:id="@+id/row_competition_header_team"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
	        android:textColor="@color/grey3"
	        android:text="@string/event_page_standings_team"
	        android:textSize="15sp" />
        
        <!-- Points -->
        <com.mitv.ui.elements.FontTextView
	        android:id="@+id/row_competition_event_header_points"
	        android:layout_width="30dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
	        android:textColor="@color/grey3"
	        android:text="@string/competition_standings_points_short"
	        android:textAlignment="center"
	        android:gravity="center"
	        android:textSize="15sp" />
        
        <!-- +/- -->
        <com.mitv.ui.elements.FontTextView
	        android:id="@+id/row_competition_event_header_plus_minus"
	        android:layout_width="30dp"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
	        android:layout_toLeftOf="@id/row_competition_event_header_points"
	        android:textColor="@color/grey3"
	        android:text="@string/competition_standings_plus_minus"
	        android:textAlignment="center"
	        android:textSize="15sp" />
        
        <!-- GP -->
        <com.mitv.ui.elements.FontTextView
	        android:id="@+id/row_competition_event_header_gp"
	        android:layout_width="30dp"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/row_competition_event_header_plus_minus"
	        android:textColor="@color/grey3"
	        android:text="@string/competition_standings_gp"
	        android:textAlignment="center"
	        android:textSize="15sp" />
    
    </RelativeLayout>
    
    
    <!-- DIVIDER -->
    <View
        android:id="@+id/row_competition_event_header_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/row_competition_event_group_header_container"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/grey1" />
    
	<!-- FLAG, NAME AND STANDINGS -->
    <RelativeLayout
        android:id="@+id/row_competition_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_competition_event_header_divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_color_selector_white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >
	    
        <!-- Team flag -->
        <ImageView
            android:id="@+id/row_competition_event_lineup_team_flag"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/competitions_contry_flag_default" />

        <!-- Team name -->
        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_competition_event_lineup_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/row_competition_event_lineup_team_flag"
            android:layout_centerVertical="true"
            android:textSize="15sp" />
        
        <!-- Points -->
        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_competition_event_lineup_team_pts"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15sp" />
        
        <!-- +/- -->
        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_competition_event_lineup_team_plus_minus"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/row_competition_event_lineup_team_pts"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="15sp" />
        
        <!-- GP -->
        <com.mitv.ui.elements.FontTextView
            android:id="@+id/row_competition_event_lineup_team_gp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/row_competition_event_lineup_team_plus_minus"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="15sp" />

	</RelativeLayout>

    <!-- ROW DIVIDER -->	
    <View
        android:id="@+id/row_competition_event_row_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/row_competition_event_group_header_container"
        android:background="@color/grey1" />
    
</RelativeLayout>