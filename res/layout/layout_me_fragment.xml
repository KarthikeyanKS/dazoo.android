<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.seconscreen.customviews"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/mepage_person_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mepage_avatar_iv"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp" >

                <ProgressBar
                    android:id="@+id/mepage_avatar_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/mepage_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="98dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mepage_avatar_iv"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="26sp" />
        </RelativeLayout>

        <!-- REMINDERS BAR -->

        <RelativeLayout
            android:id="@+id/mepage_reminders_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mepage_person_container"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mepage_reminders_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_launcher" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/mepage_reminders_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mepage_reminders_icon"
                android:text="@string/reminders"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mepage_reminders_button_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_search" />
        </RelativeLayout>

        <!-- LIKES BAR -->

        <RelativeLayout
            android:id="@+id/mepage_likes_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mepage_reminders_container"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/light_gray"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mepage_likes_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_launcher" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/mepage_likes_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mepage_likes_icon"
                android:text="@string/likes"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mepage_likes_button_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_search" />
        </RelativeLayout>

        <!-- MY CHANNELS BAR -->

        <RelativeLayout
            android:id="@+id/mepage_my_channels_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mepage_likes_container"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/light_gray"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mepage_my_channels_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_launcher" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/mepage_my_channels_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mepage_my_channels_icon"
                android:text="@string/my_channels"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mepage_my_channels_button_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_search" />
        </RelativeLayout>

        <!-- SETTINGS BAR -->

        <RelativeLayout
            android:id="@+id/mepage_settings_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mepage_my_channels_container"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/light_gray"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mepage_settings_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_launcher" />

            <com.millicom.secondscreen.customviews.FontTextView
                android:id="@+id/mepage_settings_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mepage_settings_icon"
                android:text="@string/settings"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mepage_settings_button_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_action_search" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>