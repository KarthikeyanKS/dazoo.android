<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/competition_event_scrollable_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey1"
    android:orientation="vertical" >

    <com.emilsjolander.components.StickyScrollViewItems.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp" >
            
            <!-- ONGOING GAME -->
            <include
                android:id="@+id/competition_event_block_container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                layout="@layout/block_competition_event_main_content" />
            
            
            <!-- TABS: HIGHLIGHTS & LINEUP -->
            <RelativeLayout
                android:id="@+id/competition_event_block_tabs_highlights_and_lineup"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/competition_event_block_container_layout"
	            android:orientation="vertical"
	            android:layout_marginTop="10dp"
	            android:paddingBottom="10dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp" >

	            <com.viewpagerindicator.TabPageIndicator
	                android:id="@+id/tab_event_indicator_for_highlights_and_lineup"
	                android:layout_width="match_parent"
	                android:layout_height="44dp"
	                android:background="@color/white"
	                android:tag="sticky" />
	
	            <View
	                android:id="@+id/tab_event_divider_for_highlights_and_lineup"
	                android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:layout_below="@id/tab_event_indicator_for_highlights_and_lineup"
	                android:background="@color/home_divider" />
	
	            <com.mitv.ui.elements.CustomViewPager
	                android:id="@+id/tab_event_pager_for_highlights_and_lineup"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/tab_event_divider_for_highlights_and_lineup" />
        	</RelativeLayout>

            
            <!-- TABS: GROUP X & STANDINGS -->
            <RelativeLayout
                android:id="@+id/competition_event_block_tabs_group_and_standings"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/competition_event_block_tabs_highlights_and_lineup"
	            android:orientation="vertical"
	            android:layout_marginTop="10dp"
	            android:paddingBottom="10dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp" >

	            <com.viewpagerindicator.TabPageIndicator
	                android:id="@+id/tab_event_indicator_for_group_and_standings"
	                android:layout_width="match_parent"
	                android:layout_height="44dp"
	                android:background="@color/white"
	                android:tag="sticky" />
	
	            <View
	                android:id="@+id/tab_event_divider_for_group_and_standings"
	                android:layout_width="match_parent"
	                android:layout_height="1dp"
	                android:layout_below="@id/tab_event_indicator_for_group_and_standings"
	                android:background="@color/home_divider" />
	
	            <com.mitv.ui.elements.CustomViewPager
	                android:id="@+id/tab_event_pager_for_group_and_standings"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/tab_event_divider_for_group_and_standings" />
        	</RelativeLayout>
        	
        </RelativeLayout>
        
    </com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>
    
    <!-- NAVIGATION TABS -->

    <include
        android:id="@+id/tab_selector_container"
        android:layout_alignParentBottom="true"
        layout="@layout/block_bottom_tabs" />

    <!-- ERROR, NO CONTENT, NO CONNECTION VIEWS -->

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        layout="@layout/layout_request_callbacks_holder_main_layout" />

</RelativeLayout>