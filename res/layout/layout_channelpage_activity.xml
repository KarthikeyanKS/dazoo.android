<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_gray"
    android:orientation="vertical" >

    <!-- CHANNEL ICON CONTAINER -->

    <RelativeLayout
        android:id="@+id/channelpage_channel_icon_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/channelpage_channel_icon_iv"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- BOTTOM NAVIGATION TABS -->

    <include
        android:id="@+id/tab_selector_container"
        android:layout_alignParentBottom="true"
        layout="@layout/block_bottom_tabs" />

    <!-- LIST OF FOLLOWING UP BROADCASTS (AND CURRENT!) -->

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tab_selector_container"
        android:layout_below="@id/channelpage_channel_icon_container"
        android:layout_margin="10dp"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        layout="@layout/layout_request_callbacks_holder_layout" />

</RelativeLayout>