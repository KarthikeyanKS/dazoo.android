<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="@dimen/guide_image_margin"
    android:orientation="vertical" >

    <com.mitv.customviews.FontTextView
        android:id="@+id/row_search_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        font:fonttextview="roboto_mitv_light.ttf" />

    <LinearLayout
        android:id="@+id/row_search_result_meta_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/row_search_result_title"
        android:weightSum="1.0" >

        <com.mitv.customviews.FontTextView
            android:id="@+id/row_search_result_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/grey3"
            android:textSize="14sp"
            font:fonttextview="roboto_mitv_light.ttf" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/row_search_result_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/grey3"
            android:textSize="14sp"
            font:fonttextview="roboto_mitv_light.ttf" />
    </LinearLayout>

</RelativeLayout>