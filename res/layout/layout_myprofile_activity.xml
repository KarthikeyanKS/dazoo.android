<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:id="@+id/activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- FOOTER: BOTTOM NAVIGATION TABS -->

    <include
        android:id="@+id/tab_selector_container"
        android:layout_alignParentBottom="true"
        layout="@layout/block_bottom_tabs" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_selector_container"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey1"
            android:paddingBottom="10dp" >


            <RelativeLayout
                android:id="@+id/myprofile_menu_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:padding="2dp" >

                <RelativeLayout
                    android:id="@+id/myprofile_sign_in_or_sign_up_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_have_an_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:text="@string/sign_in_to_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/header_1"
                        font:fonttextview="roboto_mitv_bold.ttf" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_signup_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myprofile_have_an_account"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="10dp"
                        android:text="@string/signup_characters"
                        android:textColor="@color/black"
                        android:textSize="@dimen/header_2"
                        font:fonttextview="roboto_mitv_light.ttf" />

                    <RelativeLayout
                        android:id="@+id/myprofile_signup_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/myprofile_have_an_account"
                        android:background="@drawable/layout_rounded_corners_blue"
                        android:minHeight="50dp"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <com.mitv.customviews.FontTextView
                            android:id="@+id/myprofile_signup_container_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/sign_up"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            font:fonttextview="roboto_mitv_bold.ttf" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/myprofile_login_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/myprofile_signup_info"
                        android:layout_below="@id/myprofile_signup_container"
                        android:background="@drawable/layout_rounded_corners_blue"
                        android:minHeight="50dp"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <com.mitv.customviews.FontTextView
                            android:id="@+id/myprofile_login_container_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            font:fonttextview="roboto_mitv_bold.ttf" />
                    </RelativeLayout>
                </RelativeLayout>

                
            <!-- CONTAINER FOR PROFILE MENU -->
                <RelativeLayout
                    android:id="@+id/myprofile_person_container_signed_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/myprofile_avatar_iv"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_logged_in_as"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/myprofile_avatar_iv"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/header_2"
                        font:fonttextview="roboto_mitv_light.ttf" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myprofile_logged_in_as"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/myprofile_avatar_iv"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/header_1"
                        font:fonttextview="roboto_mitv_bold.ttf" />
                </RelativeLayout>

                <!-- LIKES BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_likes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_person_container_signed_in"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/myprofile_likes_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="3dp" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_likes_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/myprofile_likes_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_medium.ttf" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_likes_button_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />
                </RelativeLayout>

                <!-- MY CHANNELS BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_my_channels_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_likes_container"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/myprofile_my_channels_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="3dp" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_my_channels_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/myprofile_my_channels_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_medium.ttf" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_my_channels_button_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />
                </RelativeLayout>

                <!-- REMINDERS BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_reminders_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_person_container_signed_in"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:orientation="horizontal"
                    android:padding="12dp" >

                    <ImageView
                        android:id="@+id/myprofile_reminders_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        android:visibility="gone" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_reminders_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/myprofile_reminders_icon"
                        android:text="@string/reminders"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_medium.ttf" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_reminders_button_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />
                </RelativeLayout>

                <!-- About us BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_about_us_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_my_channels_container"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:orientation="horizontal"
                    android:padding="12dp" >

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_about_us_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_medium.ttf" />
                </RelativeLayout>

                <!-- android:text="@strings/myprofile_about_us" -->

                <RelativeLayout
                    android:id="@+id/myprofile_terms_of_use_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_about_us_container"
                    android:layout_margin="1dp"
                    android:background="@color/grey1"
                    android:orientation="horizontal"
                    android:padding="12dp" >

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_terms_of_use_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_medium.ttf" />
                </RelativeLayout>
            </RelativeLayout>

            <!-- android:text="@strings/myprofile_terms_of_use" -->


            <!-- LOGIN BLOCK -->

            <RelativeLayout
                android:id="@+id/myprofile_signin_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myprofile_menu_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/layout_rounded_corners_white"
                android:orientation="vertical"
                android:visibility="gone" >

                <com.mitv.customviews.FontTextView
                    android:id="@+id/myprofile_signin_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/sign_in_to_title"
                    android:textSize="@dimen/header_1"
                    android:textStyle="bold"
                    font:fonttextview="roboto_mitv_medium.ttf" />

                <com.mitv.customviews.FontTextView
                    android:id="@+id/myprofile_signin_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_signin_title_tv"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:text="@string/sign_in_to_text"
                    android:textColor="@color/grey2"
                    android:textSize="@dimen/header_2"
                    font:fonttextview="roboto_mitv_medium.ttf" />

                <View
                    android:id="@+id/signin_container_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/myprofile_signin_text_tv"
                    android:layout_margin="10dp"
                    android:background="@color/grey1" />

                <!-- FACEBOOK SIGN-IN BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_signin_facebook_container"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/signin_container_divider"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/layout_rounded_corners_facebook_blue"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal" >

                        <com.mitv.customviews.FontTextView
                            android:id="@+id/myprofile_signin_facebook_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:text="@string/icon_facebook"
                            android:textColor="@color/white"
                            android:textSize="34sp"
                            font:fonttextview="roboto_mitv_bold.ttf" />

                        <com.mitv.customviews.FontTextView
                            android:id="@+id/myprofile_signin_facebook_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/myprofile_signin_facebook_icon"
                            android:text="@string/login_with_facebook"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            font:fonttextview="roboto_mitv_bold.ttf" />
                    </RelativeLayout>
                </RelativeLayout>

                <!-- OR BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_or_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_signin_facebook_container"
                    android:layout_margin="10dp"
                    android:orientation="horizontal" >

                    <View
                        android:id="@+id/container_or_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/grey1" />

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/signin_or_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:padding="5dp"
                        android:text="@string/or"
                        android:textColor="@color/grey2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_medium.ttf" />
                </RelativeLayout>

                <!-- SIGN UP WITH EMAIL BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_signup_email_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_or_container"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_rounded_corners_blue"
                    android:minHeight="50dp"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_signup_email_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/sign_up_with_email"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_bold.ttf" />
                </RelativeLayout>

                <!-- DIVIDER -->

                <View
                    android:id="@+id/myprofile_container_email_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/myprofile_signup_email_container"
                    android:layout_margin="10dp"
                    android:background="@color/grey1" />

                <!-- ALREADY REGISTERED BOX -->

                <RelativeLayout
                    android:id="@+id/myprofile_already_registered_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_container_email_divider"
                    android:orientation="vertical" >

                    <com.mitv.customviews.FontTextView
                        android:id="@+id/myprofile_already_registered_text_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/already_registered"
                        android:textColor="@color/grey2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_bold.ttf" />

                    <com.mitv.customviews.FontButton
                        android:id="@+id/myprofile_login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myprofile_already_registered_text_tv"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/layout_rounded_corners_white"
                        android:gravity="center_horizontal"
                        android:text="@string/login_here"
                        android:textColor="@color/blue1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        font:fonttextview="roboto_mitv_medium.ttf" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>