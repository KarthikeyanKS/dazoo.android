<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.millicom.secondscreen"
    android:id="@+id/activity_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tab_selector_container"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        android:orientation="horizontal"
        android:paddingBottom="2dp" >

        <com.millicom.secondscreen.customviews.FontButton
            android:id="@+id/show_tvguide"
            style="@style/homepage_tab_selector"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:text="@string/tab_tv_guide"
            android:textSize="15sp" />

        <com.millicom.secondscreen.customviews.FontButton
            android:id="@+id/show_activity"
            style="@style/homepage_tab_selector"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:text="@string/tab_activity"
            android:textSize="15sp" />

        <com.millicom.secondscreen.customviews.FontButton
            android:id="@+id/show_me"
            style="@style/homepage_tab_selector"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:text="@string/tab_me"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/tab_selector_container"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="@color/dark_gray" >
			
            <!-- CONTAINER FOR PROFILE MENU -->
            
            <RelativeLayout
                android:id="@+id/myprofile_menu_container"
                android:layout_width="fill_parent"
          		android:layout_height="wrap_content"
          		android:layout_margin="10dp"
          		android:padding="2dp"
          		android:background="@drawable/layout_rounded_corners_white">
          		
	            <RelativeLayout
	                android:id="@+id/myprofile_person_container"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="10dp"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:id="@+id/myprofile_avatar_iv"
	                    android:layout_width="150dp"
	                    android:layout_height="150dp" />
	
	                <RelativeLayout
	                    android:layout_width="150dp"
	                    android:layout_height="150dp" >
	
	                    <ProgressBar
	                        android:id="@+id/myprofile_avatar_progressbar"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_centerInParent="true"
	                        android:visibility="gone" />
	                </RelativeLayout>
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_name_tv"
	                    android:layout_width="fill_parent"
	                    android:layout_height="98dp"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@id/myprofile_avatar_iv"
	                    android:gravity="center_vertical"
	                    android:maxLines="3"
	                    android:padding="10dp"
	                    android:textColor="@color/black"
	                    android:textSize="26sp" />
	            </RelativeLayout>
	
	            <!-- REMINDERS BAR -->
	
	            <RelativeLayout
	                android:id="@+id/myprofile_reminders_container"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/myprofile_person_container"
	                android:layout_margin="1dp"
	                android:background="@color/light_gray"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:id="@+id/myprofile_reminders_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:padding="3dp"
	                    android:src="@drawable/ic_launcher" />
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_reminders_title_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@id/myprofile_reminders_icon"
	                    android:text="@string/reminders"
	                    android:textSize="18sp"
	                    android:textStyle="bold" />
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_reminders_button_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="10dp" />
	            </RelativeLayout>
	
	            <!-- LIKES BAR -->
	
	            <RelativeLayout
	                android:id="@+id/myprofile_likes_container"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/myprofile_reminders_container"
	                android:layout_margin="1dp"
	                android:background="@color/light_gray"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:id="@+id/myprofile_likes_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:padding="3dp"
	                    android:src="@drawable/ic_launcher" />
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_likes_title_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@id/myprofile_likes_icon"
	                    android:text="@string/likes"
	                    android:textSize="18sp"
	                    android:textStyle="bold" />
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_likes_button_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="10dp" />
	            </RelativeLayout>
	
	            <!-- MY CHANNELS BAR -->
	
	            <RelativeLayout
	                android:id="@+id/myprofile_my_channels_container"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/myprofile_likes_container"
	                android:layout_margin="1dp"
	                android:background="@color/light_gray"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:id="@+id/myprofile_my_channels_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:padding="3dp"
	                    android:src="@drawable/ic_launcher" />
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_my_channels_title_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@id/myprofile_my_channels_icon"
	                    android:text="@string/my_channels"
	                    android:textSize="18sp"
	                    android:textStyle="bold" />
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_my_channels_button_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="10dp" />
	            </RelativeLayout>
	
	            <!-- SETTINGS BAR -->
	
	            <RelativeLayout
	                android:id="@+id/myprofile_settings_container"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/myprofile_my_channels_container"
	                android:layout_margin="1dp"
	                android:background="@color/light_gray"
	                android:orientation="horizontal" >
	
	                <ImageView
	                    android:id="@+id/myprofile_settings_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentLeft="true"
	                    android:layout_centerVertical="true"
	                    android:padding="3dp"
	                    android:src="@drawable/ic_launcher" />
	
	                <com.millicom.secondscreen.customviews.FontTextView
	                    android:id="@+id/myprofile_settings_title_tv"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@id/myprofile_settings_icon"
	                    android:text="@string/settings"
	                    android:textSize="18sp"
	                    android:textStyle="bold" />
	            </RelativeLayout>
            </RelativeLayout>

            <!-- LOGIN BLOCK -->

            <RelativeLayout
                android:id="@+id/myprofile_signin_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myprofile_menu_container"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/layout_rounded_corners_white"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <com.millicom.secondscreen.customviews.FontTextView
                    android:id="@+id/myprofile_signin_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:text="@string/sign_in_to_dazoo_title"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.millicom.secondscreen.customviews.FontTextView
                    android:id="@+id/myprofile_signin_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/myprofile_signin_title_tv"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:text="@string/sign_in_to_dazoo_text"
                    android:textSize="18sp"
                    android:textColor="@color/light_gray" />

                <View
                    android:id="@+id/signin_container_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/myprofile_signin_text_tv"
                    android:layout_margin="10dp"
                    android:background="@color/light_gray" />

                <!-- FACEBOOK SIGN-IN BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_signin_facebook_container"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/signin_container_divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_rounded_corners_lightblue"
                    android:orientation="horizontal" >
					
                    <RelativeLayout 
					    android:layout_width="wrap_content"
		           		android:layout_height="wrap_content"
		           		android:layout_centerInParent="true"
		           		android:background="@color/lightblue">
	                    <ImageView
	                        android:id="@+id/myprofile_signin_facebook_icon"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_alignParentLeft="true"
	                        android:layout_centerVertical="true"
	                        android:padding="3dp"
	                        android:src="@drawable/ic_launcher" />
	
	                    <com.millicom.secondscreen.customviews.FontTextView
	                        android:id="@+id/myprofile_signin_facebook_tv"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_centerVertical="true"
	                        android:layout_toRightOf="@id/myprofile_signin_facebook_icon"
	                        android:text="@string/login_with_facebook"
	                        android:textSize="18sp"
	                        android:textStyle="bold"
	                        android:textColor="@color/white" />
                    </RelativeLayout>
                </RelativeLayout>

        <!-- OR BAR -->

        <RelativeLayout
            android:id="@+id/myprofile_or_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myprofile_signin_facebook_container"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <View
                android:id="@+id/container_or_divider"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/light_gray"/>
            
            <com.millicom.secondscreen.customviews.FontTextView 
                android:id="@+id/signin_or_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:text="@string/or"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:textSize="18sp"
	            android:textStyle="bold"
	            android:textColor="@color/light_gray" />
            
        </RelativeLayout>

                <!-- SIGN UP WITH EMAIL BAR -->

                <RelativeLayout
                    android:id="@+id/myprofile_signup_email_container"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/myprofile_or_container"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/layout_rounded_corners_lightblue"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <com.millicom.secondscreen.customviews.FontTextView
                        android:id="@+id/myprofile_signup_email_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/sign_up_with_email"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <!-- DIVIDER -->

                <View
                    android:id="@+id/myprofile_container_email_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/myprofile_signup_email_container"
                    android:layout_margin="10dp"
                    android:background="@color/light_gray" />

                <!-- ALREADY REGISTERED BOX -->

                <RelativeLayout
		            android:id="@+id/myprofile_already_registered_container"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_below="@id/myprofile_container_email_divider"
		            android:layout_centerInParent="true" 
		            android:layout_marginTop="20dp"
		            android:layout_marginBottom="10dp"
		            android:layout_marginLeft="10dp"
		            android:layout_marginRight="10dp"
		            android:orientation="horizontal" >

		            <com.millicom.secondscreen.customviews.FontTextView
		                android:id="@+id/myprofile_already_registered_text_tv"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_margin="10dp"
		                android:gravity="center_vertical|center_horizontal"
		                android:text="@string/already_registered"
		                android:textSize="18sp"
			            android:textStyle="bold"
			            android:textColor="@color/light_gray" />
		
		            <com.millicom.secondscreen.customviews.FontButton
		                android:id="@+id/myprofile_login_btn"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_toRightOf="@id/myprofile_already_registered_text_tv"
		                android:gravity="center_vertical|center_horizontal"
		                android:padding="10dp"
		                android:text="@string/login"
		                android:textSize="16sp"
		                android:textStyle="bold"
		                android:textColor="@color/white"
		                android:background="@drawable/layout_rounded_corners_lightgray" />
        		</RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>