<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".SplashScreenActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@color/transparent" >

        <ImageView
            android:id="@+id/splash_screen_activity_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:src="@drawable/splash_logo" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/splash_screen_activity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/splash_screen_activity_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:maxLines="3"
            android:singleLine="false"
            android:text="@string/splash_screen_activity_text"
            android:textColor="@color/white"
            android:textSize="14sp"
            font:fonttextview="roboto_mitv_bold.ttf" />
        
        <ProgressBar
            android:id="@+id/splash_screen_activity_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_below="@id/splash_screen_activity_text"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>

</RelativeLayout>