<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res/com.mitv"
    android:id="@+id/block_feed_recommended_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- CONTENT LABEL -->

    <com.mitv.customviews.FontTextView
        android:id="@+id/block_feed_recommended_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:textSize="20sp"
        font:fonttextview="roboto_mitv_medium.ttf" />

    <!-- PRODUCT IMAGE -->

    <FrameLayout
        android:id="@+id/block_feed_recommended_content_image_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_recommended_header_tv" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >

            <ImageView
                android:id="@+id/block_feed_recommended_content_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/block_feed_recommended_content_iv_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </FrameLayout>

    <!-- CONTENT DETAILS -->

    <RelativeLayout
        android:id="@+id/block_feed_recommended_content_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_recommended_content_image_frame"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/block_feed_recommended_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/block_feed_recommended_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/block_feed_recommended_icon"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            font:fonttextview="roboto_mitv_medium.ttf"
            android:lines="1" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/block_feed_recommended_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_recommended_title_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16sp"
            font:fonttextview="roboto_mitv_medium.ttf" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/block_feed_recommended_channel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_recommended_time_tv"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16sp"
            font:fonttextview="roboto_mitv_medium.ttf" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/block_feed_recommended_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_recommended_channel_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:textColor="@color/grey2"
            android:textSize="14sp"
            font:fonttextview="roboto_mitv_medium.ttf" />

        <com.mitv.customviews.FontTextView
            android:id="@+id/block_feed_recommended_timeleft_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_recommended_details_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:visibility="gone"
            font:fonttextview="roboto_mitv_medium.ttf" />

        <ProgressBar
            android:id="@+id/block_feed_recommended_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block_feed_recommended_timeleft_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progressDrawable="@drawable/progress_horizontal"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- ACTION BUTTONS -->

    <View
        android:id="@+id/block_feed_recommended_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/block_feed_recommended_content_details_container"
        android:layout_marginTop="10dp"
        android:background="@color/grey1" />

    <LinearLayout
        android:id="@+id/block_feed_recommended_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_feed_recommended_divider"
        android:background="@color/white"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:paddingRight="10dp"
		android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <!-- LIKE BUTTON -->

        <LinearLayout
            android:id="@+id/block_feed_recommended_like_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
			android:layout_gravity="center" >

            <ImageView
                android:id="@+id/block_feed_recommended_like_button_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="7dp"
                android:src="@drawable/ic_like_default" />
        </LinearLayout>

        <!-- SEPARATOR -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_separator" />
        </LinearLayout>

        <!-- SHARE BUTTON -->

        <LinearLayout
            android:id="@+id/block_feed_recommended_share_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
			android:layout_gravity="center" >

            <ImageView
                android:id="@+id/block_feed_recommended_share_button_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="7dp"
                android:src="@drawable/ic_share_default" />
        </LinearLayout>

        <!-- SEPARATOR -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_separator" />
        </LinearLayout>

        <!-- REMIND BUTTON -->

        <LinearLayout
            android:id="@+id/block_feed_recommended_remind_button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
			android:layout_gravity="center" >

            <ImageView
                android:id="@+id/block_feed_recommended_remind_button_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="7dp"
                android:src="@drawable/ic_guide_clock" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>