<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.millicom.secondscreen"
    android:installLocation="preferExternal"
    android:versionCode="6"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.millicom.secondscreen.SecondScreenApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >

        <!-- HOME ACTIVITY -->
        <activity
            android:name="com.millicom.secondscreen.content.homepage.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/HomePage" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ACTIVITY PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.activity.ActivityActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- POPULAR CONTENT PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.activity.PopularPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.activity.ActivityActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.activity.ActivityActivity" />
        </activity>

        <!-- MYPROFILE ACTIVITY -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.MyProfileActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- SEARCH PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.search.SearchPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- LIKES -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.LikesActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.myprofile.MyProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.myprofile.MyProfileActivity" />
        </activity>

        <!-- MY CHANNELS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.MyChannelsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.myprofile.MyProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.myprofile.MyProfileActivity" />
        </activity>

        <!-- REMINDERS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.RemindersActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.myprofile.MyProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.myprofile.MyProfileActivity" />
        </activity>

        <!-- SETTINGS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.SettingsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.myprofile.MyProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.myprofile.MyProfileActivity" />
        </activity>

        <!-- CONTACT -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.ContactActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- TERMS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.TermsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- HELP -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.HelpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- BROADCAST PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.tvguide.BroadcastPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTop"
            android:parentActivityName="com.millicom.secondscreen.content.homepage.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.homepage.HomeActivity" />
        </activity>

        <!-- UPCOMING EPISODES PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.tvguide.UpcomingeEpisodesPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.tvguide.BroadcastPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.tvguide.BroadcastPageActivity" />
        </activity>

        <!-- REPEATITIONS PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.tvguide.RepetitionsPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.tvguide.BroadcastPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.tvguide.BroadcastPageActivity" />
        </activity>

        <!-- CHANNEL PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.tvguide.ChannelPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.homepage.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ChannelPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.millicom.secondscreen.content.homepage.HomeActivity" />
        </activity>

        <!-- SIGN IN -->
        <activity
            android:name="com.millicom.secondscreen.authentication.SignInActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" />

        <!-- SIGN UP -->
        <activity
            android:name="com.millicom.secondscreen.authentication.SignUpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" />

        <!-- DAZOO LOGIN -->
        <activity
            android:name="com.millicom.secondscreen.authentication.DazooLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:parentActivityName="com.millicom.secondscreen.content.homepage.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" />

        <!-- FACEBOOK LOGIN -->
        <activity
            android:name="com.millicom.secondscreen.authentication.FacebookLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" />

        <!-- PASSWORD RESET -->
        <activity
            android:name="com.millicom.secondscreen.authentication.ResetPasswordActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" />

        <!-- PASSWORD RESET FINAL -->
        <activity
            android:name="com.millicom.secondscreen.authentication.ResetPasswordFinalActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" />

        <!-- FACEBOOK DAZOO ACCOUNT CREATED -->
        <activity
            android:name="com.millicom.secondscreen.authentication.FacebookDazooLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden" />

        <receiver
            android:name="com.millicom.secondscreen.notification.AlarmReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="DAZOO_NOTIFICATION" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.millicom.secondscreen.notification.AlarmSetter"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- HOCKEY APP ACTIVITIES -->
        <activity android:name="net.hockeyapp.android.UpdateActivity" />
        <activity android:name="net.hockeyapp.android.FeedbackActivity" />
    </application>

</manifest>