<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.millicom.secondscreen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="com.millicom.secondscreen.SecondScreenApplication">
        <activity
            android:name="com.millicom.secondscreen.content.homepage.HomePageActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" 
            android:hardwareAccelerated="false" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- SEARCH PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.search.SearchPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- LIKES -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.LikesActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- MY CHANNELS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.MyChannelsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- REMINDERS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.RemindersActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- SETTINGS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.SettingsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- BROADCAST PAGE -->
        <activity 
            android:name="com.millicom.secondscreen.content.tvguide.BroadcastPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"/>
        
        <!-- CHANNEL PAGE -->
        <activity 
            android:name="com.millicom.secondscreen.content.tvguide.ChannelPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"/>
        
        <!-- FACEBOOK LOGIN -->
        <activity
            android:name="com.millicom.secondscreen.authentication.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"/>
        
        
        <meta-data android:value="@string/app_id" android:name="com.facebook.sdk.ApplicationId"/>
        
        <activity android:name="com.facebook.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light"/>   
        
    </application>

</manifest>