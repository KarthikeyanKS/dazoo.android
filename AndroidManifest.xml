<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.millicom.secondscreen"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.millicom.secondscreen.SecondScreenApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--  activity
            android:name="com.millicom.secondscreen.content.homepage.HomePageActivity"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-->
        
        
        <!-- HOME ACTIVITY -->
        <activity
            android:name="com.millicom.secondscreen.content.homepage.HomeActivity"
            android:hardwareAccelerated="false"
            android:launchMode="singleTop"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- ACTIVITY PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.activity.ActivityActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- MYPROFILE ACTIVITY -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.MyProfileActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- SEARCH PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.search.SearchPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- LIKES -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.LikesActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- MY CHANNELS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.MyChannelsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- REMINDERS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.RemindersActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- SETTINGS -->
        <activity
            android:name="com.millicom.secondscreen.content.myprofile.SettingsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- BROADCAST PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.tvguide.BroadcastPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- CHANNEL PAGE -->
        <activity
            android:name="com.millicom.secondscreen.content.tvguide.ChannelPageActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- SIGN IN -->
         <activity
            android:name="com.millicom.secondscreen.authentication.SignInActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- SIGN UP -->
         <activity
            android:name="com.millicom.secondscreen.authentication.SignUpActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Holo.Theme.Light" />
        
        <!-- DAZOO LOGIN -->
         <activity
            android:name="com.millicom.secondscreen.authentication.DazooLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- FACEBOOK LOGIN -->
        <activity
            android:name="com.millicom.secondscreen.authentication.FacebookLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- PASSWORD RESET -->
        <activity
            android:name="com.millicom.secondscreen.authentication.ResetPasswordActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- PASSWORD RESET FINAL -->
        <activity
            android:name="com.millicom.secondscreen.authentication.ResetPasswordFinalActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <!-- FACEBOOK DAZOO ACCOUNT CREATED -->
        <activity
            android:name="com.millicom.secondscreen.authentication.FacebookDazooLoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Light" />
        
        
        <!-- LOGIN ALL IN ONE : FOR TESTING -->
        <activity
            android:name="com.millicom.secondscreen.authentication.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        
        <receiver
            android:name="com.millicom.secondscreen.notification.AlarmReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="DAZOO_NOTIFICATION" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.millicom.secondscreen.notification.AlarmSetter"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light" />
    </application>

</manifest>